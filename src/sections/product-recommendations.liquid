{% assign heading = 'You may also like' %}
{% assign limit = 4 %}
<div
  class="product-recommendations"
  data-product-id="{{ product.id }}"
  data-limit="{{ limit }}" data-section-id="{{ section.id }}"
  data-section-type="product-recommendations"
  data-recommended-products
>
  Hi I recommend things
  {% if recommendations.products_count > 0 %}
    <div class="product-recommendations__heading">
      <h2>{{ heading }}</h2>
    </div>
    <ul class="product-recommendations__grid">
      {% for product in recommendations.products %}
        <li class="product-recommendations__grid__item">
          {% include 'product-card-grid', max_height: 250 %}
        </li>
      {% endfor %}
    </ul>
  {% endif %}
</div>
