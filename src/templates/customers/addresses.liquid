<div class="account-addresses">
  {% paginate customer.addresses by 10 %}
    <a class="account-addresses__back" href="/account">
      <i class="fas fa-chevron-left"></i>
      {{ 'customer.account.return' | t }}
    </a>

    <header role="banner">
      <h1>{{ 'customer.account.title' | t }}</h1>
    </header>

    <div class="account-addresses__add-new" data-address>
      <button class="primary-btn" type="button" data-address-toggle data-add-address-btn>{{ 'customer.addresses.add_new' | t }}</button>

      <div class="account-addresses__add-new__form" data-address-form class="hide">
        {% form 'customer_address', customer.new_address %}
          <h2>{{ 'customer.addresses.add_new' | t }}</h2>

          <div class="account-addresses__add-new__form__fields" data-address-fields class="address-form">

              <div>
                <label for="AddressFirstNameNew">
                  {{ 'customer.addresses.first_name' | t }}
                </label>
                <input type="text"
                name="address[first_name]"
                id="AddressFirstNameNew"
                value="{{ form.first_name }}"
                autocapitalize="words">
              </div>
              <div>
                <label for="AddressLastNameNew">
                  {{ 'customer.addresses.last_name' | t }}
                </label>
                <input type="text"
                      name="address[last_name]"
                      id="AddressLastNameNew"
                      value="{{ form.last_name }}"
                      autocapitalize="words">
              </div>

            <div class="account-addresses__add-new__form__fields__field">
              <label for="AddressCompanyNew">
                {{ 'customer.addresses.company' | t }}
              </label>
              <input type="text"
                    name="address[company]"
                    id="AddressCompanyNew"
                    value="{{ form.company }}"
                    autocapitalize="words">
            </div>

            <div class="account-addresses__add-new__form__fields__field">
              <label for="AddressAddress1New">
                {{ 'customer.addresses.address1' | t }}
              </label>
              <input type="text"
                    name="address[address1]"
                    id="AddressAddress1New"
                    value="{{ form.address1 }}"
                    autocapitalize="words">
            </div>

            <div class="account-addresses__add-new__form__fields__field">
              <label for="AddressAddress2New">
                {{ 'customer.addresses.address2' | t }}
              </label>
              <input type="text"
                    name="address[address2]"
                    id="AddressAddress2New"
                    value="{{ form.address2 }}"
                    autocapitalize="words">
            </div>
            <div class="account-addresses__add-new__form__fields__field">
              <label for="AddressCityNew">
                {{ 'customer.addresses.city' | t }}
              </label>
              <input type="text"
                    name="address[city]"
                    id="AddressCityNew"
                    value="{{ form.city }}"
                    autocapitalize="words">
            </div>
            <div class="account-addresses__add-new__form__fields__field">
              <label for="AddressCountryNew">
                {{ 'customer.addresses.country' | t }}
              </label>
              <select
                name="address[country]"
                id="AddressCountryNew"
                data-default="{{ form.country }}">
              </select>
            </div>
            <div class="account-addresses__add-new__form__fields__field">
              <label for="AddressProvinceNew">
                {{ 'customer.addresses.province' | t }}
              </label>
              <select
                name="address[province]"
                id="AddressProvinceNew"
                data-default="{{ form.province }}">
              </select>
            </div>
            <div class="account-addresses__add-new__form__fields__field">
              <label for="AddressZipNew">
                {{ 'customer.addresses.zip' | t }}
              </label>
              <input type="text"
                    name="address[zip]"
                    id="AddressZipNew"
                    value="{{ form.zip }}"
                    autocapitalize="characters">
            </div>
            <div class="account-addresses__add-new__form__fields__field">
              <label for="AddressPhoneNew">
                {{ 'customer.addresses.phone' | t }}
              </label>
              <input type="tel"
                    name="address[phone]"
                    id="AddressPhoneNew"
                    value="{{ form.phone }}"
                    pattern="[0-9\-]*">
            </div>
          </div>
          <div class="account-addresses__add-new__form__fields__set-default">
            {{ form.set_as_default_checkbox }}
            <label for="address_default_address_new">
              {{ 'customer.addresses.set_default' | t }}
            </label>
          </div>

          <div class="account-addresses__add-new__form__actions">
            <button class="primary-btn" type="submit" data-confirm-add-btn>{{ 'customer.addresses.add' | t }}</button>
            <button class="cancel-btn" type="button" data-address-toggle data-cancel-add-btn>
              {{ 'customer.addresses.cancel' | t }}
            </button>
          </div>

        {% endform %}
      </div>
    </div>

    <div class="account-addresses__list" data-address-list>
      <h2 data-address-title>{{ 'customer.addresses.title' | t }}</h2>
      <div class="account-addresses__list__grid">
        {% for address in customer.addresses %}
          <div class="account-addresses__list__grid__item" data-address data-address-id="{{ address.id }}">
            {% if address == customer.default_address %}
              <p class="account-addresses__list__grid__item__default"><strong>{{ 'customer.addresses.default' | t }}</strong></p>
            {% endif %}

            {{ address | format_address }}

            <div class="account-addresses__list__grid__item__actions">
              <button class="secondary-btn" type="button" data-address-toggle data-edit-address-btn data-address-id="{{ address.id }}">
                {{ 'customer.addresses.edit' | t }}
              </button>
              <form data-address-delete-form method="post" action="/account/addresses/{{ address.id }}" data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}">
                <input type="hidden" name="_method" value="delete"/>
                <button class="delete-btn" type="submit" data-delete-address-btn data-address-id="{{ address.id }}">
                  {{ 'customer.addresses.delete' | t }}
                </button>
              </form>
            </div>
            <div class="account-addresses__edit-form hide" data-address-form>
              {% form 'customer_address', address %}

              <h4><strong>{{ 'customer.addresses.edit_address' | t }}</strong></h4>
              <div data-address-fields class="address-form">
                <div>
                  <label for="AddressFirstName_{{ form.id }}">
                    {{ 'customer.addresses.first_name' | t }}
                  </label>
                  <input type="text"
                        name="address[first_name]"
                        id="AddressFirstName_{{ form.id }}"
                        value="{{ form.first_name }}"
                        autocapitalize="words">

                </div>
                <div>
                  <label for="AddressLastName_{{ form.id }}">
                    {{ 'customer.addresses.last_name' | t }}
                  </label>
                  <input type="text"
                        name="address[last_name]"
                        id="AddressLastName_{{ form.id }}"
                        value="{{ form.last_name }}"
                        autocapitalize="words">

                </div>
                <div>
                  <label for="AddressCompany_{{ form.id }}">
                    {{ 'customer.addresses.company' | t }}
                  </label>
                  <input type="text"
                        name="address[company]"
                        id="AddressCompany_{{ form.id }}"
                        value="{{ form.company }}"
                        autocapitalize="words">

                </div>
                <div>
                  <label for="AddressAddress1_{{ form.id }}">
                    {{ 'customer.addresses.address1' | t }}
                  </label>
                  <input type="text"
                        name="address[address1]"
                        id="AddressAddress1_{{ form.id }}"
                        value="{{ form.address1 }}"
                        autocapitalize="words">

                </div>
                <div>
                  <label for="AddressAddress2_{{ form.id }}">
                    {{ 'customer.addresses.address2' | t }}
                  </label>
                  <input type="text"
                        name="address[address2]"
                        id="AddressAddress2_{{ form.id }}"
                        value="{{ form.address2 }}"
                        autocapitalize="words">

                </div>
                <div>
                  <label for="AddressCity_{{ form.id }}">
                    {{ 'customer.addresses.city' | t }}
                  </label>
                  <input type="text"
                        name="address[city]"
                        id="AddressCity_{{ form.id }}"
                        value="{{ form.city }}"
                        autocapitalize="words">

                </div>
                <div>
                  <label for="AddressCountry_{{ form.id }}">
                    {{ 'customer.addresses.country' | t }}
                  </label>
                  <select
                    name="address[country]"
                    id="AddressCountry_{{ form.id }}"
                    class="address-country-option"
                    data-form-id="{{ form.id }}"
                    data-default="{{ form.country }}">
                  </select>

                  <div>
                    <label for="AddressProvince_{{ form.id }}">
                      {{ 'customer.addresses.province' | t }}
                    </label>
                    <select
                      name="address[province]"
                      id="AddressProvince_{{ form.id }}"
                      data-default="{{ form.province }}">
                    </select>
                  </div>
                </div>
                <div>
                  <label for="AddressZip_{{ form.id }}">
                    {{ 'customer.addresses.zip' | t }}
                  </label>
                  <input type="text"
                        name="address[zip]"
                        id="AddressZip_{{ form.id }}"
                        value="{{ form.zip }}"
                        autocapitalize="characters">
                </div>
                <div>
                  <label for="AddressPhone_{{ form.id }}">
                    {{ 'customer.addresses.phone' | t }}
                  </label>
                  <input type="tel"
                        name="address[phone]"
                        id="AddressPhone_{{ form.id }}"
                        value="{{ form.phone }}"
                        pattern="[0-9\-]*">
                </div>
              </div>
              <div class="address-form__set-default">
                {{ form.set_as_default_checkbox }}
                <label for="address_default_address_{{ form.id }}">
                  {{ 'customer.addresses.set_default' | t }}
                </label>
              </div>

              <div class="account-addresses__list__grid__item__actions">
                <button class="primary-btn" type="submit">{{ 'customer.addresses.update' | t }}</button>
                <button class="cancel-btn" type="button" data-address-toggle data-cancel-edit-btn data-form-id="{{ form.id }}">
                  {{ 'customer.addresses.cancel' | t }}
                </button>
              </div>

              {% endform %}

            </div>
          </div>
          {% endfor %}
      </div>
    </div>

    {% if paginate.pages > 1 %}
      {% include 'pagination' %}
    {% endif %}

  {% endpaginate %}
</div>
