{% comment %}
  The share buttons share the home page URL. The share text is grabbed from the store
  meta description.
{% endcomment %}


<div class="password-landing">

  {% layout 'password' %}
  {% include 'rgp-logo' %}
  <h2>New website coming very soon!</h2>
  <div class="">
    We are just quickly setting up the new website and getting it ready to go live. It won't take long!
  </div>
  <div class="">
    In the meantime, you can still get Riverboat Gaming gear from our other stores.
  </div>
  <div class="">
    <div class="">
      <a href="https://www.ebay.co.uk/str/riverboatgaming">eBay</a>
    </div>
    <div class="">
      <a href="https://www.amazon.co.uk/stores/node/4752076031">Amazon</a>
    </div>
  </div>
  {% comment %}


  {% unless shop.password_message == blank %}
    <p>
      {{ shop.password_message }}
    </p>
  {% endunless %}

  {% form 'customer' %}

    {{ form.errors | default_errors }}

    {% if form.posted_successfully? %}
      <ul class="form-success">
        <li>{{ 'general.password_page.signup_form_success' | t }}</li>
      </ul>
    {% else %}
      <h4>{{ 'general.password_page.signup_form_heading' | t }}</h4>
      <input type="hidden" name="contact[tags]" value="prospect, password page">
      <label for="email">
        {{ 'general.password_page.signup_form_email_label' | t }}
      </label>
      <input type="email"
        name="contact[email]"
        id="Email"
        spellcheck="false"
        autocomplete="off"
        autocapitalize="off"
        placeholder="{{ 'general.password_page.signup_form_email_placeholder' | t }}">
      <button type="submit" name="commit" class="button">
        {{ 'general.password_page.signup_form_submit' | t }}
      </button>
    {% endif %}
  {% endform %}

  {% if settings.share_facebook or settings.share_twitter %}
    <p>{{ 'general.password_page.spread_the_word' | t }}</p>
    {% include 'social-sharing' %}
  {% endif %}


  <a href="#Login">
    {% include 'icon-lock' %}
    {{ 'general.password_page.password_link' | t }} &rarr;
  </a>
  {% endcomment %}
</div>
{% comment %}
  Removes the huge shopify logo etc.
{% endcomment %}
<style>
  .template-password {
    margin: 0 auto;
    text-align: center;
  }
  .password-landing {
    margin: 0 auto;
    text-align: center;
    font-size: 1.3em;
  }
  .password-landing div {
    margin: 10px;
    padding: 10px;
  }
  .password-landing a {
    font-size: 1em;
    text-decoration: none;
    color: #006b5b;
    border: 1px solid #2e2e2e;
    border-radius: 4px;
    padding: 10px 24px;
  }
  .password-landing .rgp-logo-highlight  {
    fill: #DAA528;
  }
  #Login {
    display: none;
  }
  footer { display: none; }
</style>
