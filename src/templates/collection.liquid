<div class="collection">
  <header role="banner" class="collection__header">
    <h1 class="collection__header__heading">{{ collection.title }}. </h1>
    {% if collection.description != blank %}
      <div class="collection__header__description rte">
        {{ collection.description }}
      </div>
    {% endif %}
  </header>
  <div class="collection__products" data-collection-products>
    {% assign colour_options = 'BLACK,BLUE,GREEN' | split: ',' %}
    {% for product in collection.products %}
      <a href="{{ product.url }}" class="collection__products__product-link">
        {% include 'product-card' with product, colour_options %}
      </a>
    {% endfor %}
  </div>
</div>
