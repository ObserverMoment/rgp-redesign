<div class="message-modal" data-landing-message-modal>
  <div class="message-modal__content">
    <div class="message-modal__content__top-icon">
      <i class="fas fa-virus"></i>
    </div>
    <div class="message-modal__content__message">
      <h2>COVID-19</h2>
      <div class="message-modal__content__message__one">
        We are fully operational and delivering as usual. Everything on the website that is available to buy is in stock and will ship as stated.
      </div>
      <div class="message-modal__content__message__two">
        Customer support is available and we hope that you are all safe and well.
      </div>
    </div>
    <div class="message-modal__content__bottom-icon">
      <i class="fas fa-hands-wash"></i>
    </div>
    <div class="message-modal__content__confirm" data-landing-message-btn>
      <span>Continue</span><span><i class="fas fa-arrow-right"></i><span>
    </div>
  </div>
</div>

<script type="text/javascript">
  window.addEventListener('DOMContentLoaded', (event) => {
    const modal = document.querySelector('[data-landing-message-modal]');
    // Check if the user has already confirmed this modal.
    if (!localStorage.getItem('landing-message-confirmed')) {
      modal.style.display = 'block';

      // Add listener to confirm bitton.
      const confirmBtn = document.querySelector('[data-landing-message-btn]');
      confirmBtn.addEventListener('click', () => {
        localStorage.setItem('landing-message-confirmed', 'confirmed');
        modal.style.display = 'none';
      })

    }
  });
</script>
